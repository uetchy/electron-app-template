{
  "name": "electron-cra-starter",
  "version": "0.0.0",
  "author": {
    "name": "Your Name",
    "email": "your.email@domain.com",
    "url": "https://your-website.com"
  },
  "scripts": {
    "build": "craco build",
    "dev": "concurrently -k 'npm:dev:*'",
    "dev:cra": "cross-env BROWSER=none craco start",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "eject": "craco eject",
    "package": "electron-builder -mw",
    "postinstall": "electron-builder install-app-deps",
    "prepackage": "npm run build",
    "test": "craco test"
  },
  "dependencies": {
    "@craco/craco": "^5.2.1",
    "electron-is-dev": "^1.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "3.4.1",
    "react-tippy": "^1.4.0",
    "styled-components": "^5.1.1"
  },
  "devDependencies": {
    "@types/react": "^16.9.45",
    "@types/react-dom": "^16.9.8",
    "@types/styled-components": "^5.1.2",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "electron": "^9.3.1",
    "electron-builder": "^22.8.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "typescript": "^3.9.7",
    "wait-on": "^5.1.0"
  },
  "main": "public/electron.js",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "homepage": "https://github.com/uetchy/electron-react-app-starter",
  "license": "unlicense",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.my-website.my-app",
    "productName": "MyApp",
    "copyright": "Copyright Â© 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "node_modules"
    ],
    "directories": {
      "buildResources": "buildResources"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "private": true
}
