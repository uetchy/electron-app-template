{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/@/*": ["./src/*"],
      "/@api/*": ["../api/*"]
    },
    "lib": ["ESNext", "dom", "dom.iterable"]
  },

  "include": [
    "src/**/*",
    "types/**/*.d.ts",
    "../../types/**/*.d.ts",
    "../preload/types/electron-api.d.ts",
    "../api/*"
  ]
}
